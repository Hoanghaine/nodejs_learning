<div class="mt-4">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-6 col-lg-4 mb-4">
        <div class="card">
          <a href="/courses/{{this.slug}}" class="bg-dark"><img
              src="{{this.image}}"
              class="card-img-top bg-white mt-3 mb-3"
              style="width:100%;height:200px;object-fit:scale-down"
              alt="..."
            /></a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>

            </a>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Mua Khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>